#!/usr/bin/env perl

use FindBin;
use lib "$FindBin::Bin/../lib";
use Patcher;
use Getopt::Long;
use File::Slurp;
use JSON;

eval {
    my @a;
    GetOptions(
        "define|d=s" => sub {
            my ($opt, $set) = @_;
            Patcher::_die "you must specify key=value for $opt"
                unless $set =~ /^([^=]*)=(.*)/;
            my ($key, $val) = ($1, $2);
            $val = eval $val if $val =~ /[][{}]/;
            push(@a, [ def => $key, $val ]);
        },
        "<>" => sub {
            push(@a, [ load => $_[0] ]);
        },
    ) or Patcher::_die "bad commad line arguments";

    for my $a (@a) {
        if ($a->[0] eq 'def') {
            Patcher::modify_context(@{$a->[1..2]});
            next;
        }
        if ($a->[0] eq 'load') {
            Patcher::load_config($a->[1]);
            next;
        }
        Patcher::_die "unknown action type '$a->[0]'";
    }
};

if ($@) {
    $| = 1;
    print "$@\n";
}
if ($^O =~ /Win/) {
    print "press enter to continue..\n";
    getc;
}
exit 1 if $@;
